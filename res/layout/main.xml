<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent" android:layout_width="match_parent">
    <LinearLayout android:layout_gravity="fill" android:layout_width="match_parent" android:orientation="vertical" android:weightSum="1" android:layout_height="match_parent" android:id="@+id/linearLayout1">
        <LinearLayout android:id="@+id/linearLayout2" android:baselineAligned="true" android:gravity="top" android:orientation="horizontal" android:weightSum="1" android:layout_height="50dp" android:layout_width="match_parent">
            <Button android:text="Start" android:id="@+id/button1" android:layout_height="match_parent" android:layout_width="wrap_content"></Button>
            <Button android:text="Reset" android:id="@+id/button2" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
            <EditText android:id="@+id/EditText01" android:layout_height="wrap_content" android:layout_width="450dp"></EditText>
            <EditText android:id="@+id/editText1" android:layout_width="450dp" android:layout_height="wrap_content">
                <requestFocus></requestFocus>
            </EditText>
            <Button android:text="+" android:id="@+id/button3" android:layout_height="wrap_content" android:layout_width="80dp"></Button>
            <Button android:text="-" android:id="@+id/button4" android:layout_height="match_parent" android:layout_width="80dp"></Button>
        </LinearLayout>
        <com.electrolites.ecg.ECGView android:id="@+id/eCGView1" android:layout_width="match_parent" android:layout_height="640dp"></com.electrolites.ecg.ECGView>
        <LinearLayout android:id="@+id/linearLayout3" android:layout_height="50dp" android:layout_width="match_parent">
            <com.electrolites.ecg.HeartRateView android:id="@+id/heartRateView1" android:layout_height="match_parent" android:layout_width="118dp"></com.electrolites.ecg.HeartRateView>
            <!-- <com.electrolites.ecg.DisplayView android:id="@+id/displayView1" android:layout_height="match_parent" android:layout_width="948dp"></com.electrolites.ecg.DisplayView>-->
            <Button android:text="Up" android:id="@+id/button5" android:layout_height="match_parent" android:layout_width="80dp"></Button>
            <Button android:text="Down" android:id="@+id/button6" android:layout_height="match_parent" android:layout_width="80dp"></Button>
        </LinearLayout>
    </LinearLayout>
	
</FrameLayout>